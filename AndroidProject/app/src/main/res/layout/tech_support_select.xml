<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTintMode="add"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow_shape"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:weightSum="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_plane"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/techs_avatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_baseline_support_agent_24"
                tools:srcCompat="@drawable/ic_tech_support_avatar_foreground" />

            <TextView
                android:id="@+id/techs_fullname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textAlignment="textStart"
                android:textSize="24sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>